{
  "name": "kristianfreeman-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently --raw \"caddy run\" \"npm start\"",
    "start": "astro dev",
    "check": "rm -rf dist && astro check",
    "playwright:install": "sudo npx playwright install-deps && sudo npx playwright install",
    "copy-fonts": "node scripts/copy-fonts.js",
    "prebuild": "npm run copy-fonts",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "dev:wrangler": "npm run build && npx wrangler@latest dev",
    "deploy": "npm run build && npx wrangler@latest deploy",
    "claude": "npx claude"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.8",
    "@astrojs/react": "^3.6.2",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@cloudflare/stream-react": "^1.9.1",
    "@expressive-code/plugin-collapsible-sections": "^0.37.1",
    "@icons-pack/react-simple-icons": "^10.1.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@tailwindcss/vite": "^4.0.8",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "astro": "^4.16.6",
    "astro-cloudflare-redirects": "^0.0.2",
    "astro-embed": "^0.7.4",
    "astro-expressive-code": "^0.37.1",
    "astro-tweet": "^0.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "geist": "^1.3.1",
    "inflection": "^3.0.0",
    "littlefoot": "^4.1.2",
    "lucide-react": "^0.453.0",
    "mdast-util-to-string": "^4.0.0",
    "playwright": "^1.48.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reading-time": "^1.5.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^4.0.8",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "unist-util-visit": "^5.0.0",
    "vite-plugin-cloudflare-redirect": "^0.1.2"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.3",
    "@catppuccin/tailwindcss": "^0.1.6",
    "@shikijs/transformers": "^1.22.0",
    "@tailwindcss/typography": "^0.5.15",
    "concurrently": "^9.1.2",
    "husky": "^9.1.6"
  }
}
