---
import Default from "@/layouts/default.astro";
import { titleize } from "inflection";
import { getCollection, getEntry } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";

const { tag: slug } = Astro.params;

const tag = await getEntry("tag", slug)
const { Content } = await tag.render();

let posts = (await getCollection("blog", ({ data }) => data.tags.map(({ slug }) => slug).includes(slug)))

posts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).filter(post => !post.data.draft);

const tags = await getCollection("tag")

export async function getStaticPaths() {
  let tags = await getCollection("tag")

  return tags.map((tag) => ({
    params: { tag: tag.slug },
    props: { tag },
  }));
}
---

<Default title={titleize(tag.data.name)}>
  <h1>{tag.data.name}</h1>
  <Content />
  <section>
    <div class="flex flex-col slide-enter-content">
      {
        posts.map((post) => (
          <div class="flex flex-col gap-2">
            <h2 class="leading-6">
              <a href={`/${post.slug}`}>{post.data.title}</a>
            </h2>
            <p>
              <FormattedDate date={post.data.pubDate} />
            </p>
          </div>
        ))
      }
    </div>
  </section>

  <section class="mt-4">
    <div class="flex flex-wrap gap-4">
      {
        tags.map((tag) => (
          <a href={`/tags/${tag.slug}`} class="text-sm">
            #{tag.slug}
          </a>
        ))
      }
    </div>
  </section>
</Default>
