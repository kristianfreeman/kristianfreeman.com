---
const { title, description } = Astro.props;
---

<div
  class="not-prose bg-destructive/60 border-l-4 border-border p-4 my-4 rounded-sm"
>
  <div class="flex">
    <div class="ml-3 space-y-2">
      <h3 class="font-bold mt-0 text-destructive-foreground">{title}</h3>
      <p class="text-destructive-foreground">{description}</p>
    </div>
  </div>
</div>
