---
interface Props {
  date: Date;
  formatOverride?: Intl.DateTimeFormatOptions;
}

const { date, formatOverride } = Astro.props;

const defaultFormat: Intl.DateTimeFormatOptions = {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
};

const formatOptions: Intl.DateTimeFormatOptions = formatOverride || defaultFormat;
---

<time
  datetime={date.toISOString()}
  title={date.toLocaleString('en-us', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  })}
>
  {
    date.toLocaleDateString('en-us', formatOptions)
  }
</time>
