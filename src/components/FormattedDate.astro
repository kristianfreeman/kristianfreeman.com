---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  datetime={date.toISOString()}
  title={date.toLocaleString('en-us', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  })}
>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
